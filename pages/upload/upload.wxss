/* pages/upload/upload.wxss */
@import "../index/index.wxss";

.upload-bg {
  width: 100%;
  height: 100%;
  bottom: 0;
  position: fixed;
  filter: blur(10px);
  z-index: 0;
}

page {
  overflow: hidden;
}

.keyboard-wrapper {
  bottom: 0;
  height: 35%;
  width: 100%;
  position: fixed;
  display: flex;
  flex-direction: row;
}

.keyboard-left {
  height: 100%;
  background: rgba(65, 65, 65, 0.8);
  border-right: .5rpx solid rgb(160, 160, 160);
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.keyboard-left .key {
  width: 50%;
  line-height: 400%;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
}

.keyboard-left .key:active {
  -webkit-transition-duration: 0s; 
  -moz-transition-duration: 0s; 
  transition-duration: 0ms; 
  background: rgba(126, 126, 126, 0.8)
}

.keyboard-left .key.active {
  background: rgba(126, 126, 126, 0.8)  
}

.keyboard-right {
  height: 100%;
  width: 100%;
  background: rgba(65, 65, 65, 0.8);
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.keyboard-right .key {
  flex: 30%;
  line-height: 400%;
  font-size: 40rpx;
  text-align: center;
  color: #fff;
}

.keyboard-right .key:active {
  background: rgba(126, 126, 126, 0.8)
}

.top-widget .btn.second image{
  position: fixed;
  margin-left: 110rpx;
  width: 50rpx;
  height: 50rpx;
  padding-top: 6rpx;
}

 .input-wrapper {
  top: 20rpx;
  max-height: 100%;
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 60rpx;
  margin-right: 0;
}

 .key-wrapper {
  width: 16%;
  font-size: 40rpx;
  text-align: center;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
}

 .key-wrapper .tune {
  font-size: 30rpx;
  line-height: 50%;
}

 .key-wrapper .key.high:before {
    content: '.';
    position: relative;
    top: -35rpx;
    left: 16rpx;
}

 .key-wrapper .key.low:after {
    content: '.';
    position: relative;
    top: 20rpx;
    left: -16rpx;
}
