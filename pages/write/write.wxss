/* pages/write/write.wxss */
@import "/template/tabbar/tabbar.wxss";
@import "/pages/index/index.wxss";
@import "/app.wxss";

.top-widget .btn.search image{
  position: fixed;
  margin-left: 120rpx;
  width: 50rpx;
  height: 50rpx;
  padding-top: 6rpx;
}

.comp-list-wrap {
  background: #fff;
}

.comp-list-item {
  display: flex;
  flex-direction: row;
  background-color:#fff;
  border-bottom: 1rpx solid #bbb;
  font-size: 40rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.comp-list-item:first-child {
  margin-top: 20rpx;
}

.comp-list-item .title {
  position: relative;
  left: 10rpx;
  font-size: 37rpx;
  font-weight: lighter;  
}

.comp-list-item .right-wrap {
  position: absolute;
  right: 60rpx;
  display: flex;
  flex-direction: row;
}

.arrow-icon {
  transform:rotate(180deg);
  font-size: 50rpx;
  color: #999;
  display: relative;
  right: 10rpx;
}

.comp-list-item .cover {
  position: relative;
  bottom: 0;
  height: 100%;
  width: auto;
  margin-right: 100rpx; 
  z-index: 200;
}

.comp-list-item .covered {
  display:flex;
  flex-direction:row;
  justify-content: space-between;
  width: 90%;
}