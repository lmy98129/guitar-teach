/* pages/send/send.wxss */
@import "../index/index.wxss";
@import "../../app.wxss";

.upload-bg {
  width: 100%;
  height: 100%;
  bottom: 0;
  position: fixed;
  filter: blur(10px);
  z-index: 0;
}

.title-input {
  height:110rpx;
  line-height:110rpx;
  box-sizing:border-box;
  color:#000;
  background-color:#fff;
  position:relative;
  font-size:36rpx;
  margin-top:20rpx;
  width:92%;
  margin-left:auto;
  margin-right:auto;
  border-radius:17rpx;
  text-align: center;
}

.title-input-ph {
  color: #aaa;
  text-align: center;
}

.input-wrapper {
  top: 0;
  max-height: 100%;
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 60rpx;
  margin-right: 0;
}

.key-wrapper {
  width: 16%;
  font-size: 40rpx;
  text-align: center;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
}

.key-wrapper .tune {
  font-size: 30rpx;
  line-height: 50%;
}

.key-wrapper .key.high:before {
  content: '.';
  position: relative;
  top: -35rpx;
  left: 16rpx;
}

.key-wrapper .key.low:after {
  content: '.';
  position: relative;
  top: 20rpx;
  left: -16rpx;
}

.preview {
  position: relative;
  width: 100%;
  text-align: center;
  font-size: 35rpx;
  color: #333;
  margin-top: 100rpx;
  margin-bottom: 30rpx;
}

.save-btn {
  margin-top:20rpx;
  width:92%;
}

.root {
  height: 85%;
}