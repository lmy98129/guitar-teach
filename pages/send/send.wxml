<top-widget title="保存乐谱">
  <navi-btn slot="back-btn" btn-style="back-btn" bind:tapbtn="bindBack" insert="true"/>
</top-widget>
<view class="root">
  <image src="/images/bg.jpeg" class="upload-bg"></image>
  <input placeholder="请输入乐谱标题" class="title-input" placeholder-class="title-input-ph" bindinput="listenTitleInput"></input>
  <button class="save-btn" bindtap="bindSave">保存</button>
  <view class="preview">- 乐谱预览 -</view>
  <scroll-view scroll-y="true" scroll-x="false" style="height: 50%;" scroll-top="{{scrollTop}}">
    <view class="input-wrapper">
      <view class="key-wrapper" wx:for="{{keyArray}}" wx:key="{{index}}">
        <!-- <text class="tune" decode="true">{{item.tune}}</text> -->
        <text class="key {{item.style == 'High'?'high':''}} {{item.style == 'Low'?'low':''}} {{item.time == '1/8' ? 'with-eight': item.time == '1/4' ? 'with-four':item.time == '1/2' ? 'with-two': ''}} " decode="true">{{item.key}}</text>
      </view>
    </view>
  </scroll-view>
</view>