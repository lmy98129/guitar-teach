/* pages/class/class.wxss */
@import "../index/index.wxss";

.root{
  height: auto;
  overflow-x: hidden;
}

.class-header {
  position: relative;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  border-bottom: 1px solid rgb(229, 229, 229);
}

.class-header .pic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  margin-top: 40rpx;
  margin-left: 40rpx;
  margin-right: 30rpx;
}

.class-header .info {
  font-size: 35rpx;
  color: #64615f;
}

.class-header .info .title {
  margin-top: 15rpx;
  margin-bottom: 16rpx;
}

.class-header .info .content {
  font-size: 28rpx;
  font-weight: lighter;
}

.class-header .last-time {
  font-size: 25rpx;
  border: 1px solid;
  border-width: 1px;
  border-color: rgb(79, 190, 196);
  border-style: solid;
  border-radius: 19px;
  color: rgb(79, 190, 196);
  width: 150rpx;
  height: 36rpx;
  text-align: center;
  margin-left: 100rpx;
  margin-top: 70rpx;
}

.hw-wrap {
  width: 100%;
  height: auto;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  border-top: 1px solid rgb(229, 229, 229);
  margin-top: 30rpx;
}

.hw-wrap .hw {
  width: 100%;
  height: 95rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #aaa;
}

.hw .arrow {
  width: 50rpx;
  height: 50rpx;
  transform: rotate(270deg);
  margin-right: 50rpx;
  margin-top: 18rpx;
}

.hw .title {
  font-size: 33rpx;
  line-height: 90rpx;
  margin-left: 55rpx;
  font-weight: lighter;
  color: #64615f;
}

.hw .arrow.up {
  transform: rotate(90deg);
}

.hw-wrap .hw.up {
  border-bottom: 1px solid rgb(229, 229, 229);
}

.hw-wrap .detail {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.detail .score-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.detail .graph {
  width: 40%;
  margin-left: 18rpx;
}

.detail .summary {
  width: 40%;
  font-size: 28rpx;
  color: #64615f;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  line-height: 24rpx;
  font-weight: lighter;
}

.stu-wrap{
  width: 100%;
}
.stu-wrap .exc-wrap{
  width: 100%;
}

.exc-wrap .sum{
  width: 100%;
  font-size: 33rpx;
  font-weight: lighter;
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #64615f;
}

.exc-wrap .list {
  width: 95%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.exc-wrap .list .stu {
  display: flex;
  flex-direction: column;
}

.exc-wrap .list .stu .avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.exc-wrap .list .stu .name {
  font-size: 28rpx;
  color: #64615f;
  font-weight: lighter;
  text-align: center;
}

.msg-list-top {
  height: 150rpx;
}