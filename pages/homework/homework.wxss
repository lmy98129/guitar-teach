/* pages/homework/homework.wxss */
@import "../index/index.wxss";
@import "../class/class.wxss";

page {
  background: #fff;
}

.top-widget .btn.back image {
  z-index: 200;
  padding-top: 13rpx;
  width: 26rpx;
  height: 40rpx;
}

.top-bg {
  height: 500rpx;
}

.page-title {
  margin-left: 85rpx!important;
}

.avatar-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  overflow: hidden;
}

.func-wrap {
  display: flex;
  flex-direction: row;
  align-content: space-around;
  align-items: center;
  margin-top: 20rpx;
  overflow: hidden;
  height: 140rpx;
  background: rgba(255, 255, 255, .3);
  z-index: 280;
  position: relative;
  width: 100%;
  padding-bottom: 40rpx;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  margin:50rpx auto 30rpx;
  background-color: #bfbfbf;
  border-radius: 50%;
  z-index: 250;
  transform: translateZ(100rpx)
}

.func-wrap .func {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.func .pic {
  width: 60rpx;
  height: 60rpx;
  margin-top: 35rpx;
}

.func .name {
  font-size: 30rpx;
  font-weight: lighter;
  margin-top: 20rpx;
}