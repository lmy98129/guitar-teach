<view class="top-widget">
  <image class="top-bg" src="../../images/top-bg-big.png"></image>
  <view class="btn back new" bindtap="bindBack">
    <image src="/images/back-white.png"></image>
  </view>
  <view class="page-title">
    {{name}}的作业
  </view>
</view>
<view class="avatar-wrap">
  <image class="avatar" src="/images/portrait.png"></image>
</view>
<view class="func-wrap">
