    <image class="pic" src="/images/date.png"></image>
    <view class="name">整体情况</view>
  </view>
  <view class="func">
    <image class="pic" src="/images/user.png"></image>
    <view class="name">速度情况</view>
  </view>
  <view class="func">
    <image class="pic" src="/images/date.png"></image>
    <view class="name">音准情况</view>
  </view>
  <view class="func">
    <image class="pic" src="/images/user.png"></image>
    <view class="name">乐谱对比</view>
  </view>
</view>
